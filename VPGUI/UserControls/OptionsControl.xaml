<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:metro="clr-namespace:MahApps.Metro;assembly=MahApps.Metro"
             xmlns:models="clr-namespace:VPGUI.Models" x:Class="VPGUI.UserControls.OptionsControl"
             xmlns:e="clr-namespace:EnumTools;assembly=EnumTools"
             xmlns:settings="clr-namespace:VPGUI.Utilities.Settings"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance models:MainModel}"
             d:DesignHeight="100" d:DesignWidth="500">
    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <WrapPanel Orientation="Horizontal" Grid.Row="0" DataContext="{Binding Options}">
                <GroupBox Header="Appearance">
                    <Grid Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Content="Theme:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" />
                        <ComboBox Grid.Column="1" Grid.Row="0" Margin="5" SelectedValue="{Binding Theme, Mode=TwoWay}"
                              SelectedValuePath="Value">
                            <ComboBox.ItemsSource>
                                <e:EnumItemList EnumType="{x:Type metro:Theme}" />
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <Label Content="Theme Color:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" />
                        <ComboBox Grid.Column="1" Grid.Row="1" Margin="5" ItemsSource="{Binding AvailableAccents, Mode=OneWay}"
                              SelectedValue="{Binding ThemeAccent, Mode=TwoWay}" HorizontalContentAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:AccentView}">
                                    <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor,
                                      AncestorType={x:Type ComboBoxItem}}, Mode=OneTime}"
                                      Background="{Binding Resources[AccentColorBrush], Mode=OneTime}">
                                        <TextBlock Text="{Binding Name, Mode=OneTime}" Margin="3, 0, 3, 0" />
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            
                <GroupBox Header="VP handling">
                    <Grid Width="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Content="Extraction Location:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" />
                        <ComboBox Grid.Column="1" Grid.Row="0" Margin="5" SelectedValue="{Binding ExtractLocation, Mode=TwoWay}"
                              SelectedValuePath="Value" ToolTip="Specifies the location where files are extracted before they are opened">
                            <ComboBox.ItemsSource>
                                <e:EnumItemList EnumType="{x:Type settings:ExtractLocation}">
                                    <e:EnumItem Value="WorkingDir" Text="In the application directory" />
                                    <e:EnumItem Value="VpLocation" Text="In the VP directory"
                                                DisplayValue="The file will be placed at the path it had in the VP-file" />
                                </e:EnumItemList>
                            </ComboBox.ItemsSource>
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type e:EnumItem}" >
                                    <TextBlock Text="{Binding Text, Mode=OneTime}" ToolTip="{Binding DisplayValue, Mode=OneTime}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Label Content="Backup mode:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" />
                        <ComboBox Grid.Column="1" Grid.Row="1" Margin="5" SelectedValue="{Binding BackupMode, Mode=TwoWay}"
                              SelectedValuePath="Value">
                            <ComboBox.ItemsSource>
                                <e:EnumItemList EnumType="{x:Type settings:BackupMode}">
                                    <e:EnumItem Value="CreateBackups" Text="Create backups" 
                                                DisplayValue="When a VP-file is going to be overwritten it will be copied to a secure location" />
                                    <e:EnumItem Value="NoBackups" Text="Don't create backups" />
                                </e:EnumItemList>
                            </ComboBox.ItemsSource>
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type e:EnumItem}" >
                                    <TextBlock Text="{Binding Text, Mode=OneTime}" ToolTip="{Binding DisplayValue, Mode=OneTime}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            </WrapPanel>
            
            <Button Content="Go back" Grid.Row="1" Margin="7" HorizontalAlignment="Right" 
                    VerticalAlignment="Center" Command="{Binding OptionsCommand}" />
        </Grid>
    </ScrollViewer>
</UserControl>
